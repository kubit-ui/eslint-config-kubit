# pnpm configuration for eslint-config-kubit
# https://pnpm.io/npmrc

# Store configuration
# Use a shared store to save disk space across projects
store-dir=~/.pnpm-store

# Hoisting configuration
# Hoist all dependencies to the root node_modules
hoist=true
hoist-pattern[]=*

# Public hoist pattern for tools that need to be accessible
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=@types/*

# Strict peer dependencies
# Warn about missing peer dependencies but don't fail
strict-peer-dependencies=false
auto-install-peers=true

# Performance optimizations
# Use hard links instead of copying files
package-import-method=hardlink

# Lockfile configuration
# Don't update lockfile unless explicitly requested
lockfile=true
frozen-lockfile=false

# Registry configuration
registry=https://registry.npmjs.org/

# Resolution mode
resolution-mode=highest

# Node linker
# Use isolated node linker for better compatibility
node-linker=isolated

# Enable dedupe
dedupe-peer-dependents=true

# Save exact versions
save-exact=false
save-prefix=^
